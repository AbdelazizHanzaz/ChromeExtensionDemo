{
    "manifest_version" : 3,
    "name" : "Colorado",
    "description" : "Ext for backcolor",
    "version" : "1.0",
    
    "background": {
        "service_worker" : "background.js"
    },
    "permissions" : ["storage", "activeTab", "scripting"], 
    "action": {
           "default_popup" : "popup.html",
           "default_icon": {
               "16" : "/images/colour16.png",
               "24" : "/images/colour24.png",
                "32" : "/images/colour32.png"
           }
    }, 
    "icons": {
        "16" : "/images/colour16.png",
         "24" : "/images/colour24.png"
    }, 
    "options_page": "options.html"

}